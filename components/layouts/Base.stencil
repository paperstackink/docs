          docsearch({
            appId: 'PX7V6M47QR',
            apiKey: '97a241ccf07d6070b1df528a7857bf87',
            indexName: 'paperstack',
            insights: true, 
            container: '[data-search]',
            debug: false 
          });

          function toggleSearch() {
            if (document.querySelector('.DocSearch--active')) {
